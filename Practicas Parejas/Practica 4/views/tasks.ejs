<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Gestor de tareas AW</title>

        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
        <link rel="stylesheet" href="/css/tasksScreen.css" media="screen">
        <link rel="stylesheet" href="/css/tasksPrint.css" media="print">
        <link rel="shortcut icon" href="./img/LogoIcon.png">
    </head>

    <body>
        <div class="navbar navbar-dark bg-dark fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">
                    <div class="LogoAndText">
                        <img src="img/LogoIcon.png" alt="Logo Task Manager"class="LogoImg">
                        <label class="LogoText">Task Manager</label>
                    </div>
                </a>

                <div class="userSession">
                    <img src="./img/UserImg.png" alt="Avatar del Usuario" class="LogoUser mx-auto">
                    <div class="NameUserOutSession">
                        <div class="NameUser">
                            cordovaperez@ucm.es
                        </div>
                        <div class="OutSession">
                            <button type="button" class="NavButton">Desconectar</button>
                        </div>
                    </div>
              </div>
            </div>
        </div>

        <main>
           <nav class="navbar navbar-dark bg-dark">
                <div class="container-fluid">
                    <a class="navbar-brand" href="#"></a>
                    <div class="userSession">
                        <img src="./img/UserImg.png" alt="Avatar del Usuario" class="LogoUser">
                        <div class="NameUserOutSession">
                            <div class="NameUser"></div>
                            <div class="OutSession">
                                cordovaperez@ucm.es
                                <button type="button" class="btn btn-outline-light navbutton">Desconectar</button>
                            </div>
                        </div>
                  </div>
                </div>
            </nav>

            <div class="PrincipalTitle">
                <h1>Tareas<h1>
            </div>

            <div class="container PrincipalBlock">
                <ul> 
                    <% taskList.forEach(function(task){ %>
                        <% if(task.hecho === 0) { %>
                            <li id="TaskToDo">
                                <h4 class="ToDo"> <%= task.textoTarea; %></h4>
                                <div class="label">
                                    <% tagsList.forEach(function(tag){ %>
                                            <span class="badge rounded-pill bg-primary"><h6><%= tag.texto %></h6></span>                                
                                    <% }); %>
                                </div> 
                                <button class="ButtonFinalize">Finalizar</button>
                            </li>
                        <% } else if(task.hecho === 1) { %>
                            <li id="TaskDone">
                                <h4><%= task.textoTarea; %></h4>
                            </li>
                        <% } %>
                    <%  }); %>
                </ul>

                <div class="FinalButtonsSection">
                    <div>
                        <button class="ButtonDeleteTask">Eliminar Tareas</button>
                    </div>
                    <div>
                        <button class="ButtonAddTask" data-bs-toggle="modal" data-bs-target="#AniadirTarea" > Añadir Nueva</button>
                        
                        
                        <div class="modal fade" id="AniadirTarea" style="display: none;" aria-hidden="true">
                            <div class="modal-dialog modal-lg modal-dialog-centered">
                              <div class="modal-content">
                          
                                <!-- cabecera del diálogo -->
                                <div class="modal-header">
                                  <h4 class="modal-title">Título del diálogo</h4>
                                </div>
                          
                                <!-- cuerpo del diálogo -->
                                <div class="modal-body">
                                   <div class="container-fluid">   
                                      <form>
                                        <div class="mb-3 row">
                                          <label for="usuario" class="col-sm-3 col-form-label">Texto de la tarea:</label>
                                          <div class="col-sm-9">
                                            <input type="text" class="form-control" id="usuario">
                                          </div>
                                        </div>
                                        <div class="mb-3 row">
                                          <label for="clave" class="col-sm-3 col-form-label">Etiqueta/s asociada/s a la tarea:</label>
                                          <div class="col-sm-9">
                                            <input type="password" class="form-control" id="clave">
                                          </div>
                                        </div>
                                        <div class="mb-3 row">
                                          <div class="offset-sm-3 col-sm-9">
                                            <button type="submit" class="btn btn-primary">Añadir Tarea</button> 
                                            <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Cancelar</button>
                                          </div>
                                        </div>  
                                      </form>
                                    </div>     
                                </div>
                          
                                <!-- pie del diálogo -->
                                <div class="modal-footer">
                                  <p>Entrada al sitio</p>
                                </div>
                          
                              </div>
                            </div>
                          </div>


                    </div>
                </div>
            </div> 
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-p34f1UUtsS3wqzfto5wAAmdvj+osOnFyQFpp4Ua3gs/ZVWx6oOypYoCJhGGScy+8" crossorigin="anonymous"></script>
        </main>
    </body>
    
</html>