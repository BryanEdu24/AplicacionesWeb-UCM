<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Gestor de tareas AW</title>

        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
        <link rel="stylesheet" href="./css/tasksScreen.css" media="screen">
        <link rel="stylesheet" href="./css/tasksPrint.css" media="print">
        <link rel="shortcut icon" href="./img/LogoIcon.png">
    </head>

    <body>
        <div class="navbar navbar-dark bg-dark fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">
                    <div class="LogoAndText">
                        <img src="img/LogoIcon.png" alt="Logo Task Manager"class="LogoImg">
                        <label class="LogoText">Task Manager</label>
                    </div>
                </a>

                <div class="userSession">
                    <img src="./img/UserImg.png" alt="Avatar del Usuario" class="LogoUser mx-auto">
                    <div class="NameUserOutSession">
                        <div class="NameUser">
                            cordovaperez@ucm.es
                        </div>
                        <div class="OutSession">
                            <button type="button" class="NavButton">Desconectar</button>
                        </div>
                    </div>
              </div>
            </div>
        </div>

        <main>
           <nav class="navbar navbar-dark bg-dark">
                <div class="container-fluid">
                    <a class="navbar-brand" href="#"></a>
                    <div class="userSession">
                        <img src="./img/UserImg.png" alt="Avatar del Usuario" class="LogoUser">
                        <div class="NameUserOutSession">
                            <div class="NameUser"></div>
                            <div class="OutSession">
                                cordovaperez@ucm.es
                                <button type="button" class="btn btn-outline-light navbutton">Desconectar</button>
                            </div>
                        </div>
                  </div>
                </div>
            </nav>

            <div class="PrincipalTitle">
                <h1>Tareas<h1>
            </div>

            <div class="container PrincipalBlock">
                <ul>
                    <% taskList.forEach(function(task){ %>
                        <% if(task.hecho === 0) { %>
                            <li id="TaskToDo">
                                <h4 class="ToDo"> <%= task.textoTarea; %></h4>
                                <div class="label">
                                    <% tagsList.forEach(function(tag){ %>
                                            <span class="badge rounded-pill bg-primary"><h6><%= tag.texto %></h6></span>                                
                                    <% }); %>
                                </div> 
                                <button class="ButtonFinalize">Finalizar</button>
                            </li>
                        <% } else if(task.hecho === 1) { %>
                            <li id="TaskDone">
                                <h4><%= task.textoTarea; %></h4>
                            </li>
                        <% } %>
                    <%  }); %>
                </ul>

                <div class="FinalButtonsSection">
                    <div>
                        <button class="ButtonDeleteTask">Eliminar Tareas</button>
                    </div>
                    <div>
                        <button class="ButtonAddTask">AÃ±adir Nueva</button>
                    </div>
                </div>
            </div> 
        </main>
    </body>
    
</html>