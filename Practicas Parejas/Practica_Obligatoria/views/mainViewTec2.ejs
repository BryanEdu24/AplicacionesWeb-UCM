                    $('#tablaTec').find('tr').eq(i).show();
                    if (($($('#tablaTec').find('tr').eq(i)).find('td').eq(3).html()).includes(varInput)) { // Devuelve lo que hay dentro del td (2 por la posicion del texto) y comprobamos con includes si contiene lo de varInput
                        // Nada
                    }
                    else {
                        $('#tablaTec').find('tr').eq(i).hide();
                    }
                }
            });
        }
    </script>
</html>