<!DOCTYPE html>
<html lang="en">
    <head> 
        <%- include("subplantillas/head") %>
        <link rel="stylesheet" href="stylesheets/mainViewTec4.css" media="screen">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">
    </head>

    <body>
        <%- include("subplantillas/navbar") %>
        <!-- Front del mainViewTec -->
        <div class="containerUser container ">
            <div class="wrap">
                <div class="search d-flex justify-content-end">
                    <span class="me-3 d-flex align-items-center">
                        <input id="checkboxUsers" type="checkbox" class="me-1">
                        <label for="checkboxUsers"><strong>Usuarios</strong></label>
                    </span>
                    <input type="text" class="searchTerm" placeholder="Buscar avisos...">
                    <button type="submit" class="searchButton">
                        <img src="images/lupaVector.svg" title="www.ucm.es" alt="Logo de la UCM" class="lupa">
                    </button>
                </div>
            </div>

            <div class="menuOpciones">
                <button class="botonAvisosEntrantes" onclick="window.location.href='mainViewTec1.html'">
                    Avisos entrantes
                </button>
                <button class="botonMisAvisos" onclick="window.location.href='mainViewTec2.html'">
                    Mis avisos
                </button>
                <button class="botonHistorialAvisos" onclick="window.location.href='mainViewTec3.html'">
                    Historial de Avisos
                </button>
                <button class="botonGestionUsuarios" onclick="window.location.href='mainViewTec4.html'">
                    Gesti칩n de usuarios
                </button>
            </div>

            <table class="tablaTec4">
                <% if (Usuarios.length > 0) { %>
                    <tr>
                        <th>Fecha</th>
                        <th>Nombre</th>
                        <th>Rol</th>
                        <th>Acciones</th>
                    </tr>
                    <% Usuarios.forEach(function(usuario) { %>
                        <tr>
                            <td class="fechas"><%= usuario.fecha %></td>
                            <td class="nombres"><%= usuario.nombre %></td>
                            <td class="roles"><%= usuario.rol %></td>
                            <td class="acciones">
                                <img src="images/basura.svg" alt="" width="35" height="35" data-bs-toggle="modal" data-bs-target="#modalBorrarUsuario">
                            </td>
                        </tr>
                    <% }); %>
                <% } else {%>
                    <tr>
                        <th>Fecha</th>
                        <th>Nombre</th>
                        <th>Rol</th>
                        <th>Acciones</th>
                    </tr>
                    <tr class="text-center">
                        <td colspan="4">
                            <strong>
                                춰Vaya!... no hay usuarios para mostrar 游땱
                            </strong>
                            <div>
                                <img src="images/sinMensajes.png" alt="" width="50" height="50">
                            </div>
                        </td>
                    </tr>
                <% } %>
            </table>
        </div>

        <!-- Modal para eliminar Usuario -->
        <div class="modal fade" id="modalBorrarUsuario">
            <div class="modal-dialog modal-sm modal-dialog-centered">
                <div class="modal-content">
                    <!-- cabecera del di치logo -->
                    <div class="modal-header">
                    <h4 class="modal-title">丘Eliminar Usuario</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                    </div>
            
                    <!-- cuerpo del di치logo -->
                    <div class="modal-body">
                        쮼st치 seguro que quieres eliminarlo?
                        <div class="text-center"><h6 style="color: lightsalmon;">*No perder치s sus datos*</h6></div>
                    </div>
            
                    <!-- pie del di치logo -->
                    <div class="modal-footer borrarborde">
                        <button type="button" class="btn btnCancelarBorrado" data-bs-dismiss="modal">Cancelar</button>
                        <button type="button" class="btn btnEliminarUsuario" data-bs-dismiss="modal">Aceptar</button>
                    </div>
                </div>
            </div>
        </div> 
    </body>
</html>